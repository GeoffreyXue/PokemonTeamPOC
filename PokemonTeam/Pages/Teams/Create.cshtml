@page
@model PokemonTeam.Pages.Teams.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h4>Create a New Team</h4>

<div class="row">
    <div class="col-md-4">
        <form method="post" class="d-flex my-1">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Team.Name" class="control-label"></label>
                <input asp-for="Team.Name" class="form-control" />
                <span asp-validation-for="Team.Name" class="text-danger"></span>
            </div>
            <div class="form-group px-2 d-flex flex-column justify-content-end">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a class="btn btn-secondary" asp-page="Index">Back to List</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
