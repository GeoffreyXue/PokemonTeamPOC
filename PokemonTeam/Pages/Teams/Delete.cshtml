@page
@model PokemonTeam.Pages.Teams.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h3>Dissolve this team and abandon Pokemon?</h3>
<div class="row">
    <div class="col">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Team.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Team.Name)
            </dd>
        </dl>
    
        <form method="post">
            <a class="btn btn-secondary" asp-page="./Index">Back to Teams</a>
            <input type="hidden" asp-for="Team.ID" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
</div>
